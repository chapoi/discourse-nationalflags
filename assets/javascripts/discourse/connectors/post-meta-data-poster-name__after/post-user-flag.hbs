{{#if
  (and
    this.args.post.user_signature (notEq this.args.post.user_signature "none")
  )
}}
  <img
    class="nationalflag-post"
    src="/plugins/discourse-nationalflags/images/nationalflags/{{this.args.post.user_signature}}.png"
    alt={{this.args.post.user_signature}}
    title={{this.args.post.user_signature}}
  />
{{/if}}